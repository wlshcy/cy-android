<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/white_f4f4f4" />
            <stroke android:width="0.5dp" android:color="@color/gray_575757" />
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/white_f4f4f4" />
            <stroke android:width="0.5dp" android:color="@color/gray_575757" />
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/white_fefefe" />
            <stroke android:width="0.5dp" android:color="@color/gray_575757" />
            <corners android:radius="2dp"/>
        </shape>
    </item>
</selector>