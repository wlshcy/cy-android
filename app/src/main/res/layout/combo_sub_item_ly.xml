<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_selector"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/combo_img"
            android:layout_width="@dimen/px374"
            android:layout_height="@dimen/px208"
            android:layout_gravity="center_horizontal" />

        <ProgressBar
            android:id="@+id/imgProgress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible" />

    </FrameLayout>

    <TextView
        android:id="@+id/combo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px10"
        android:textColor="@color/green_1cc568"
        android:textSize="@dimen/font28" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/distribution_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_242424"
            android:textSize="@dimen/px26" />

        <TextView
            android:id="@+id/distribution_all_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px14"
            android:textColor="@color/black_242424"
            android:textSize="@dimen/px26" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px10"
        android:orientation="vertical"></LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/px20"
        android:background="@color/gray_ebebeb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px98"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/red_fc3d2e"
            android:textSize="@dimen/font32" />


        <TextView
            android:id="@+id/market_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px16"
            android:gravity="center_vertical"
            android:textColor="@color/gray_999999"
            android:textSize="@dimen/font32" />


        <TextView
            android:id="@+id/choose_dishes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/choose_dishes_selector"
            android:gravity="right|center_vertical"
            android:paddingRight="@dimen/px40"
            android:text="@string/go_choose_dishes"
            android:textColor="#1CC568"
            android:textSize="@dimen/font34"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>