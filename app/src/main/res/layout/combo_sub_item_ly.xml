<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/combo_img"
        android:layout_width="@dimen/px374"
        android:layout_height="@dimen/px208"
        android:layout_gravity="center_horizontal" />


    <TextView
        android:id="@+id/combo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px20"
        android:textColor="@color/green_1cc568"
        android:textSize="@dimen/font28" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/distribution_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_242424"
            android:textSize="@dimen/px26" />

        <TextView
            android:id="@+id/distribution_all_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px14"
            android:textColor="@color/black_242424"
            android:textSize="@dimen/px26" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/px20"
        android:background="@color/gray_ebebeb" />

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_ebebeb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px98"
        android:background="@color/gray_f8f8f8"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px56">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="合计"
            android:textColor="@color/orange_ff9c48"
            android:textSize="@dimen/font34" />

        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px20"
            android:gravity="center_vertical"
            android:textColor="@color/orange_ff9c48"
            android:textSize="@dimen/font34" />

        <TextView
            android:id="@+id/choose_dishes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/px40"
            android:gravity="right|center_vertical"
            android:text="@string/go_choose_dishes"
            android:background="@drawable/choose_dishes_selector"
            android:textColor="#1CC568"
            android:textSize="@dimen/font34" />
    </LinearLayout>


</LinearLayout>