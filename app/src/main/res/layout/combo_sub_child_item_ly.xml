<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px88"
    android:background="@android:color/white"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.common.widget.CircleImageView
            android:id="@+id/additional_goods_img_1"
            android:layout_width="@dimen/px68"
            android:layout_height="@dimen/px68"
            android:layout_marginLeft="@dimen/px18"
            android:src="@color/orange_ff9c48" />

        <TextView
            android:id="@+id/additional_goods_name_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px10"
            android:gravity="center_vertical"
            android:text="五常大米"
            android:textColor="@color/gray_c7c7c7"
            android:textSize="@dimen/font28" />

        <TextView
            android:id="@+id/additional_send_weight_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px10"
            android:gravity="center_vertical"
            android:text="20斤/4周"
            android:textColor="@color/gray_c7c7c7"
            android:textSize="@dimen/font28" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/px18"
        android:layout_weight="1.0"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <com.common.widget.CircleImageView
            android:id="@+id/additional_goods_img_2"
            android:layout_width="@dimen/px68"
            android:layout_height="@dimen/px68"
            android:layout_marginLeft="@dimen/px18"
            android:src="@color/orange_ff9c48" />

        <TextView
            android:id="@+id/additional_goods_name_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px10"
            android:gravity="center_vertical"
            android:text="五常大米"
            android:textColor="@color/gray_c7c7c7"
            android:textSize="@dimen/font28" />

        <TextView
            android:id="@+id/additional_send_weight_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px10"
            android:gravity="center_vertical"
            android:text="20斤/4周"
            android:textColor="@color/gray_c7c7c7"
            android:textSize="@dimen/font28" />

    </LinearLayout>

</LinearLayout>