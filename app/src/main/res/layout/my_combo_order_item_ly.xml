<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px110"
    android:background="@drawable/list_item_selector"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px30"
        android:orientation="vertical"
        android:padding="@dimen/px20">

        <TextView
            android:id="@+id/my_combo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mycomboname"
            android:textColor="@color/black_444444"
            android:textSize="@dimen/font32" />


        <TextView
            android:id="@+id/my_combo_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px6"
            android:text="status"
            android:textColor="#bbbbbb"
            android:textSize="@dimen/font28" />

    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px26"
        android:layout_marginRight="@dimen/px26"
        android:src="@drawable/icon_more" />

</RelativeLayout>