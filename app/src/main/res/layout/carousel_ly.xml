<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.common.widget.ViewFlow
        android:id="@+id/carousel_img"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px374"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <com.common.widget.CircleFlowIndicator
        android:id="@+id/carousel_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:padding="20dp"
        app:activeDrawable="@drawable/icon_dot_selected"
        app:inactiveDrawable="@drawable/icon_dot"
        app:inactiveType="fill"
        app:radius="7dp" />

</FrameLayout>