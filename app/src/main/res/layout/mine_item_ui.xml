<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_selector"
    android:minHeight="@dimen/px100">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawablePadding="@dimen/px14"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px40"

        android:textColor="@android:color/black"
        android:textSize="@dimen/font28" />

    <TextView
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/px16"
        android:drawablePadding="@dimen/px40"
        android:drawableRight="@drawable/icon_more"
        android:gravity="center"
        android:textColor="@color/gray_9a9a9a"
        android:textSize="@dimen/font26" />

</FrameLayout>