<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px680"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px324"
        android:background="@color/green_31c27c"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/px28"
            android:drawableTop="@drawable/icon_alert"
            android:text="@string/my_combo_expire"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font32" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/px40"
        android:text="@string/my_combo_expire_tip"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font28" />

    <TextView
        android:id="@+id/close_btn"
        android:layout_width="@dimen/px250"
        android:layout_height="@dimen/px80"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="@dimen/px60"
        android:background="@drawable/white_corner"
        android:gravity="center"
        android:text="@string/close" />

</LinearLayout>