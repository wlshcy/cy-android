<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px250"
    android:background="@drawable/list_item_selector">

    <ImageView
        android:id="@+id/combo_img"
        android:layout_width="@dimen/px350"
        android:layout_height="@dimen/px222"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/px16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/px20"
        android:layout_marginTop="@dimen/px20"
        android:orientation="vertical">

        <!--<FrameLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content">-->

            <!--<TextView-->
                <!--android:id="@+id/my_combo"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@drawable/icon_my_combo"-->
                <!--android:gravity="center"-->
                <!--android:text="@string/my_combo"-->
                <!--android:textColor="@android:color/white" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/my_combo_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px40"
                android:gravity="center"
                android:textColor="@color/white_f4f4f4"
                android:drawableLeft="@drawable/icon_combo_green"/>

            <TextView
                android:id="@+id/combo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/px20"
                android:drawablePadding="@dimen/px20"
                android:textColor="@color/black_303030"
                android:visibility="visible" />
        </LinearLayout>
        <!--</FrameLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px40"
            android:layout_marginTop="@dimen/px20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="送X次"
                android:textColor="@color/orange_f36043"
                android:textSize="@dimen/font26" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px10"
                android:layout_marginRight="@dimen/px10"
                android:text="|"
                android:textColor="@color/orange_f36043" />

            <TextView
                android:id="@+id/per_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6斤/次"
                android:textColor="@color/orange_f36043"
                android:textSize="@dimen/font26" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px10"
                android:layout_marginRight="@dimen/px10"
                android:text="|"
                android:textColor="@color/orange_f36043" />

            <TextView
                android:id="@+id/dis_cycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1次/周"
                android:textColor="@color/orange_f36043"
                android:textSize="@dimen/font26" />

        </LinearLayout>


        <TextView
            android:id="@+id/farm_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来自:"
            android:layout_marginLeft="@dimen/px40"
            android:layout_marginTop="@dimen/px20"
            android:textColor="@color/gray_9a9a9a"
            android:textSize="@dimen/font26" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px40"
            android:layout_marginTop="@dimen/px20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/combo_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥3600.00"
                android:textColor="@color/green_32bd6f" />


            <TextView
                android:id="@+id/combo_mprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px70"
                android:text="￥3600.00"
                android:textColor="@color/gray_9a9a9a" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>