<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="@dimen/px20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_f4f4f4_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px30"
            android:text="@string/login_tip"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font36" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="@dimen/px440"
            android:layout_height="@dimen/px70"
            android:layout_marginBottom="@dimen/px30"
            android:layout_marginTop="@dimen/px30"
            android:background="@drawable/gray_cec9c2_bg"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@color/gray_a9a9a9"
            android:textSize="@dimen/font23" />

    </LinearLayout>


</LinearLayout>