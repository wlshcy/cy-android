<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    android:orientation="vertical">

    <include layout="@layout/common_title_ly" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dishes_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/dishes_order"
            android:textColor="@color/green_11C258"
            android:textSize="@dimen/font28" />

        <TextView
            android:id="@+id/shopping_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/shopping_order"
            android:textColor="@color/gray_676767"
            android:textSize="@dimen/font28" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/orderPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/px16" />
</LinearLayout>